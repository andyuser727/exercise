<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .newLine {
            display: block;
        }

        .paddingButton {
            padding-bottom: 20px;
        }

        .floatLeft {
            float: left;
        }

    </ui:style>
    <g:HTMLPanel>

        <g:SimplePanel ui:field="contentWrapperPanel">
            <g:FlowPanel>
                <g:FlowPanel addStyleNames='{style.paddingButton}'>
                    <g:Button ui:field='btnSaveContact' text='Save'/>
                    <g:Button ui:field='btnExit' text='Exit'/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}' text="First Name"/>
                    <g:TextBox ui:field="forename"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}' text="SurName"/>
                    <g:TextBox ui:field="surname"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}' text="Street"/>
                    <g:TextBox ui:field="street"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}'  text="City"/>
                    <g:TextBox ui:field="city"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}'  text="County"/>
                    <g:TextBox ui:field="county"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}'  text="Country"/>
                    <g:TextBox ui:field="country"/>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Label width="100px" addStyleNames='{style.newLine} {style.floatLeft}'  text="Post Code"/>
                    <g:TextBox ui:field="postalCode"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:SimplePanel>

    </g:HTMLPanel>
</ui:UiBinder>
